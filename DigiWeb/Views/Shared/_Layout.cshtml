<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Site Yönetim Platformu</title>
    @Styles.Render("~/Content/css")
    <style>
        body {
            font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
        }
    </style>
</head>
<body style="background-color:#efefef">
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                
                <a target="_blank" href="http://faturamatik.com.tr/"><img style="float:left; width:150px; height:40px; margin: 5px 10px;" src="~/Images/faturamatik.png" /></a>
                
            </div>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li><a href="/Home/Index"><span class="glyphicon glyphicon-th" aria-hidden="true"></span> Digi Platform</a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Hakkımızda <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href=@Url.Action("Contact", "Home")><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span> İletişim</a></li>
                            <li><a href=@Url.Action("About","Home")><span class="glyphicon glyphicon-leaf" aria-hidden="true"></span> Kadromuz</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a href="http://faturamatik.com.tr/" target="_blank" class="glyphicon glyphicon-home"> Kurumsal</a></li>
                        </ul>
                    </li>
                    
                    <li><a href="#">Özellikler</a></li>

                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="#">Teklif Almak İstiyorum</a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span class="glyphicon glyphicon-log-in" aria-hidden="true"></span> Giriş Yap<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="/Login/Yonetici" ><span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Yönetici Girişi</a></li>
                            <li><a href="/Login/Kullanici" ><span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Kullanıcı Girişi</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    
    <div class="container" style="margin-top:20px;">
        @RenderBody()
    </div>
        
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
