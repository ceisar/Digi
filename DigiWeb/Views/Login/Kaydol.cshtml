@{
    ViewBag.Title = "Kaydol";
}

<link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
<link href='http://fonts.googleapis.com/css?family=Varela+Round' rel='stylesheet' type='text/css'>
<link href="~/Content/Yregister.css" rel="stylesheet" />


<div class="row">
    <div class="col-lg-2">

    </div>
    <div class="col-lg-8">
        <div class="text-center">
            <div class="logo">Kiracı / Mülk Sahibi Yeni Kayıt</div>
            <div class="login-form-1">
                <form id="register-form" class="text-left">
                    <div class="login-form-main-message"></div>
                    <div class="main-login-form">
                        <div class="login-group">
                            <div class="form-group">
                                <input type="text" class="form-control" id="reg_adsoyad" name="reg_adsoyad" placeholder="Ad Soyad">
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" id="reg_email" name="reg_email" placeholder="Email">
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control" id="reg_parola" name="reg_parola" placeholder="Parola">
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control" id="reg_parola_tekrar" name="reg_parola_tekrar" placeholder="Parola Tekrar">
                            </div>
                            <div class="form-group">
                                <input placeholder="Şehir Seç" list="browsers" name="browser">
                                <datalist id="browsers">
                                    <option value="Internet Explorer">
                                    <option value="Firefox">
                                    <option value="Chrome">
                                    <option value="Opera">
                                    <option value="Safari">
                                </datalist>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" id="reg_sitead" name="reg_sitead" placeholder="Site Adı">
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" id="reg_blok" name="reg_blok" placeholder="Blok">
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" id="reg_daire" name="reg_daire" placeholder="Daire">
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" id="reg_ktipi" name="reg_ktipi" placeholder="Kullanıcı Tipi">
                            </div>
                            <div class="form-group login-group-checkbox">
                                <input type="radio" class="" name="reg_erkek" id="erkek" placeholder="Erkek">
                                <label for="male">Erkek</label>

                                <input type="radio" class="" name="reg_kadin" id="kadin" placeholder="Kadin">
                                <label for="female">Kadın</label>
                            </div>

                            <div class="form-group login-group-checkbox">
                                <input type="checkbox" class="" id="reg_agree" name="reg_agree">
                                <label for="reg_agree"><a href="#">Şartları </a>okudum ve kabul ediyorum</label>
                            </div>
                        </div>
                        <button type="submit" class="login-button"><i class="fa fa-chevron-right"></i></button>
                    </div>
                    <div class="etc-login-form">
                        <p>Zaten bir hesabınız var mı? <a href="/Login/Kullanici">Giriş yapın</a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-lg-2">

    </div>
</div>

<script src="~/Scripts/Dropdown.js"></script>
<script src="~/Scripts/YLogin.js"></script>

